@model IEnumerable<evan.ninetyfivetees.web.Models.Shirts>
@{
    ViewData["Title"] = "Index";
}

<div class="shop">
    @foreach (var item in Model)
    {
        <a asp-action="view" asp-route-id="@item.Id" class="shop-card">
            <div class="image" style="background-image: url('@item.Design.Image')"></div>
            <div class="title">
                <h2>@item.Title</h2>
            </div>
            <div class="description">
                <p>
                    @item.Description
                </p>
                <ul class="description-list">
                    <li><b>Price: </b>@item.Price</li>
                    <li><b>Color: </b>@item.Color.Name</li>
                    <li><b>Design: </b>@item.Design.Name</li>
                    <li><b>Size: </b>@item.Size.Name</li>
                </ul>
            </div>
        </a>
    }
</div>

