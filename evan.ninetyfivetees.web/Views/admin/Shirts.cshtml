@model IEnumerable<evan.ninetyfivetees.web.Models.Shirts>
@{
    ViewData["Title"] = "Shirts";
}
<h2>Index</h2>
<div class="admin-detail-list">
    @foreach (var item in Model)
    {
        <a asp-action="Details" asp-route-id="@item.Id" class="item">
            <div class="image" style="background-image: url(@item.Image)"></div>
            <div class="content">
                <div class="stock-status">In Stock: @(item.Instock == true ? "yes" : "no")</div>
                <div class="title">@item.Title</div>
                <div class="price">@String.Format("{0:C}", item.Price)</div>
                <ul class="info">
                    <li>
                        <div class="key">Color</div>
                        <div class="value">@item.Color.Name</div>
                    </li>
                    <li>
                        <div class="key">Design</div>
                        <div class="value">@item.Design.Name</div>
                    </li>
                    <li>
                        <div class="key">Gender</div>
                        <div class="value">@item.Gender.Description</div>
                    </li>
                </ul>
                <br />
                <div class="sizes">
                    @foreach (var size in item.ShirtSizes)
                    {
                        <div class="size">@size.Size.Name</div>
                    }
                </div>
            </div>
        </a>
    }
</div>